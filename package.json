{
    "name": "@cgsoft/snap-carousel",
    "version": "1.9.2",
    "description": "A lightweight vanilla JavaScript carousel library built with modern web technologies",
    "main": "build/snap-carousel.min.js",
    "module": "build/snap-carousel.js",
    "type": "module",
    "exports": {
        ".": {
            "import": "./build/snap-carousel.js",
            "require": "./build/snap-carousel.min.js"
        }
    },
    "scripts": {
        "dev": "vite -c vite.docs.config.js",
        "build": "vite build && vite build -c vite.docs.config.js",
        "preview": "vite preview -c vite.docs.config.js",
        "watch": "vite build --watch"
    },
    "keywords": [
        "carousel",
        "slider",
        "vanilla",
        "javascript",
        "web-components",
        "custom-elements"
    ],
    "files": [
        "build"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/corentin-gautier/snap-carousel"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "rollup": "*",
        "rollup-plugin-html": "*",
        "rollup-plugin-livereload": "*",
        "rollup-plugin-postcss": "*",
        "rollup-plugin-terser": "*",
        "sass": "^1.71.1",
        "vite": "^5.1.4"
    },
    "homepage": "https://corentin-gautier.github.io/snap-carousel/",
    "author": "Corentin Grall",
    "license": "MIT"
}
